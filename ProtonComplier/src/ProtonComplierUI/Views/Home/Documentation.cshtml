@{
    ViewData["Title"] = "Proton Documentation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Link your stylesheet -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Proton Documentation</h1>

        <p>Welcome to the official Proton Compiler documentation page. Use this page to explore guides, references, and examples to help you build with Proton.</p>

