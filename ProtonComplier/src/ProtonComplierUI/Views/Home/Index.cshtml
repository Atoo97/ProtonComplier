@{
    ViewData["Title"] = "Home Page";
}

<!-- Header Section -->
<section class="header" id="header">
    <div class="header__inner container">
        <!-- Left Column -->
        <div class="header-inner">
            <h1>Proton Compiler</h1>
            <h2>
                Proton is an open-source, high-level, object-oriented programming language based on mathematical formulas and algebraic specifications.
                It transforms high-level problem definitions into optimized C# source code and fully functional executables.
            </h2>
            <a asp-controller="Editor" asp-action="Index" class="l-button btn-outline-light me-2">Try It</a>
            <a asp-controller="Documentation" asp-action="Docu" class="l-button btn-outline-light">Visit the Docs</a>
            <h5 class="socialize-text mt-4">Or Stay in touch with Proton</h5>
            <div class="socialize mt-2">
                <iframe frameborder="0" style="height: 40px;" src="https://ghbtns.com/github-btn.html?user=proton&amp;repo=proton&amp;type=star&amp;count=true&amp;size=large"></iframe>
                <iframe scrolling="no" frameborder="0" allowtransparency="true" title="Twitter Follow Button" src="https://platform.twitter.com/widgets/follow_button.html?screen_name=ProtonCompiler&amp;show_screen_name=true&amp;show_count=false&amp;size=l" style="width: 196px; height: 28px;"></iframe>
            </div>
        </div>

        <!-- Right Column: Hidden on smaller screens -->
        <div class="image-container d-none d-lg-block">
            <img src="~/images/cover.png" alt="Code on screen" class="code-image">
        </div>
    </div>
</section>

