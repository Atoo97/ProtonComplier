@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Default layout for the rest of the app
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Proton Complier</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/document.css" asp-append-version="true" />
</head>
<body>
    <header class="docs-header">
        <div class="docs-header-container">

            <!-- Title -->
            <a asp-controller="Documentation" asp-action="Docu" class="docs-header-title">
                ProtonComplier Documentation
                <span class="docs-header-version">1.0 beta 2</span>
            </a>

            <!-- Right Side -->
            <div class="docs-header-right">

                <!-- Navigation -->
                <nav class="docs-header-nav">
                    <a asp-controller="Documentation" asp-action="Guides" class="docs-header-link @(ViewData["ActiveLink"]?.ToString() == "Guides" ? "active" : "")">Guides</a>
                    <a asp-controller="Documentation" asp-action="Reference" class="docs-header-link @(ViewData["ActiveLink"]?.ToString() == "Reference" ? "active" : "")">Language Reference</a>
                    <a asp-controller="Documentation" asp-action="ErrorsAndWarnings" class="docs-header-link @(ViewData["ActiveLink"]?.ToString() == "Errors&Warnings" ? "active" : "")">Errors & Warnings</a>
                </nav>

            </div>
        </div>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <script src="~/js/docu.js" asp-append-version="true"></script>
</body>
</html>
