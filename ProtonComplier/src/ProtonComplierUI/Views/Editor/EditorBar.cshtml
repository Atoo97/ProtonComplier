<!-- Options Section (Top Navbar) -->
<nav class="navbar navbar-expand-md nav-header">
    <div class="container-fluid nav-container">
        <div class="d-flex align-items-center">

            <input type="hidden" id="InputText" name="InputText" />

            <!-- Compile Form -->
            <form id="compileForm" asp-controller="Editor" asp-action="Compile" method="post" class="d-flex align-items-center">
                <button id="compileButton" type="submit"
                        class="btn btn-primary me-1 d-flex justify-content-center align-items-center"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        title="Compile">
                    <img src="@Url.Content("~/images/Execute.svg")" alt="Compile">
                </button>
            </form>

            <!-- Compile & Run Form -->
            <form id="compileAndRunForm" asp-controller="Editor" asp-action="CompileAndRun" method="post" class="d-flex align-items-center">
                <button id="compileAndRunButton" type="submit"
                        class="btn btn-success me-1 d-flex justify-content-center align-items-center"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        title="Compile & Run">
                    <img src="@Url.Content("~/images/RunOutline.svg")" alt="Compile & Run">
                </button>
            </form>

            <!-- Clear Editor Form -->
            <form id="clearForm" asp-controller="Editor" asp-action="Clear" method="post" class="d-flex align-items-center">
                <button id="clearButton" type="submit"
                        class="btn btn-danger me-1 d-flex justify-content-center align-items-center"
                        data-bs-toggle="tooltip"
                        data-bs-placement="bottom"
                        title="Clear editor">
                    <img src="@Url.Content("~/images/ClearWindowContent.svg")" alt="Clear">
                </button>
            </form>

            <!-- File Name TextBox (Desktop Only) -->
            <input type="text" id="fileNameInputDesktop" name="fileNameInputDesktop"
                   class="form-control ms-2 d-none d-md-block"
                   placeholder="Enter file name..."
                   style="max-width: 200px; background-color: rgba(255, 255, 255, 0.7); border: 1px solid rgba(255, 255, 255, 0.3);">

        </div>

        <!-- Hamburger Menu Button (For Small Screens) -->
        <button class="navbar-toggler d-lg-none text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="border:none; padding-right: 3px; padding-left: 3px;">
            <span class="bi bi-three-dots-vertical" style="font-size: 1.5rem;"></span>
        </button>

        <!-- Navbar Links (Right side controls, hidden on small screens) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                <!-- File Name TextBox (Mobile Only) -->
                <li class="nav-item d-block d-md-none mt-2">
                    <input type="text" id="fileNameInputMobile" name="fileNameInputMobile"
                           class="form-control"
                           placeholder="Enter file name..."
                           style="background-color: rgba(255, 255, 255, 0.7); border: 1px solid rgba(255, 255, 255, 0.3);">
                </li>

            </ul>
        </div>
    </div>
</nav>