                <div id="copydFormDesktop" class="d-flex align-items-center">
                    <button id="copyButton" type="submit"
                            class="btn btn-primary me-1 d-flex justify-content-center align-items-center"
                            data-bs-toggle="tooltip"
                            data-bs-placement="bottom"
                            title="Copy code">
                        <img src="@Url.Content("~/images/Copy.svg")" alt="Copy">
                    </button>
                </div>
            </div>
            </div>
        </div>

