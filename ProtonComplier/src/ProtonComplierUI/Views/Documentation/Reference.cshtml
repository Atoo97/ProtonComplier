@{
    ViewData["Title"] = "References";
}

@section DocuBar {
    @await Html.PartialAsync("DocuBar")
}

<section class="DocuBody">
    <section class="docs-main">
        <div class="row">
            <!-- Sidebar (Desktop + Mobile TOC combined) -->
            <nav class="col-md-3 sidebar p-3" style="margin-bottom: 12px;">
                <!-- Desktop Title -->
                <h5 class="d-none d-md-block">The Language Reference & Guide</h5>

                <!-- Mobile TOC Toggle -->
                <div class="d-md-none text-center" style=" font-size: larger; font-weight: bold;">
                    <span class="text-primary" style="color: #8d74e7; cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#mobileToc" aria-expanded="false" aria-controls="mobileToc">
                        Table of Contents
                    </span>
                </div>

                <!-- TOC List -->
                <div class="collapse d-md-block mt-2" id="mobileToc">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R001" onclick="showMessage2('R001'); return false;">Welcome to Proton Compiler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R002" onclick="showMessage2('R002'); return false;">Syntax</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R003" onclick="showMessage2('R003'); return false;">The Basics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R004" onclick="showMessage2('R004'); return false;">Literals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R005" onclick="showMessage2('R005'); return false;">Variables and Assignment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#R006" onclick="showMessage2('R006'); return false;">Control Flow</a>
                        </li>
                    </ul>
                </div>
            </nav>


            <!-- Right Main Content -->
            <main class="col-md-9">
                <div class="content" id="content"></div>
                <div id="editor-container" class="box" style="height: 200px; display: none;">
                    <div id="editor-inner"></div>
                </div>
                <div class="content2" id="content2"></div>
            </main>

        </div>
    </section>
</section>
