@{
    ViewData["Title"] = "Errors & Warnings";
}

@section DocuBar {
    @await Html.PartialAsync("DocuBar")
}

<section class="DocuBody">
    <section class="docs-main">
        <div class="row">
            <!-- Left Sidebar (Table of Contents) -->
            <nav class="col-md-3 sidebar p-3" style="margin-bottom: 12px;">
                <!-- Desktop Title -->
                <h5 class="d-none d-md-block">The Language Reference & Guide</h5>

                <!-- Mobile TOC Toggle -->
                <div class="d-md-none text-center" style=" font-size: larger; font-weight: bold;">
                    <span class="text-primary" style="color: #8d74e7; cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#mobileToc" aria-expanded="false" aria-controls="mobileToc">
                        Table of Contents
                    </span>
                </div>

                <!-- TOC List -->
                <div class="collapse d-md-block mt-2" id="mobileToc">
                    <ul class="nav flex-column">
                        <!-- Lexical Errors Section -->
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P001" onclick="showMessage('P001'); return false;">Internal Complie Error (001)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P004" onclick="showMessage('P004'); return false;">Invalid Macro Type Error (004)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P005" onclick="showMessage('P005'); return false;">Missing Macro Section Error (005)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P006" onclick="showMessage('P006'); return false;">Multiple Macro Definition Warning (006)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P008" onclick="showMessage('P008'); return false;">Invalid Value Placement Error (008)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P011" onclick="showMessage('P011'); return false;">Unknown Token Definition Error (011)</a>
                        </li>
                        <!-- Parser Errors Section -->
                        <li class="nav-item mt-4">
                            <h6 class="text-uppercase text-muted">Parser Errors (101-200)</h6>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P101" onclick="showMessage('P101'); return false;">Invalid Expression Definition Error (101)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P104" onclick="showMessage('P104'); return false;">Unexpected Token Error (104)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P107" onclick="showMessage('P107'); return false;">Multiple Commas Warning (107)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P108" onclick="showMessage('P108'); return false;">Multiple Delimeter Warning (108)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P112" onclick="showMessage('P112'); return false;">Multiple Listspecifier Error (112)</a>
                        </li>
                        <!-- Semantical Errors Section -->
                        <li class="nav-item mt-4">
                            <h6 class="text-uppercase text-muted">Semantical Errors (201-300)</h6>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-item" href="#P204" onclick="showMessage('P204'); return false;">Invalid Variable Identifier Error (204)</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Right Main Content -->
            <main class="col-md-9">
                <div class="content" id="content"></div>
                <div id="editor-container" class="box" style="height: 200px; display: none;">
                    <div id="editor-inner"></div>
                </div>
                <div class="content2" id="content2"></div>
            </main>

        </div>
    </section>
</section>
